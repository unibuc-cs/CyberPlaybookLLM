            "on_completion": "action--d8e6254d-d9d8-4a30-a4b8-82c3f48fe5c8",
            "type": "action",
            "commands": [
                {
                    "type": "bash",
                    "command": "pkill -9 bad_script"
                }
            ],
            "agent": "organization--46ee92b9-1689-4389-870b-603f14f37433"
        },
        "action--d8e6254d-d9d8-4a30-a4b8-82c3f48fe5c8": {
