            "type": "if-condition",
            "condition": "process running == true",
            "on_true": "action--c29159f0-b4fc-422b-bd8b-6ad362dc6412",
            "on_false": "action--d8e6254d-d9d8-4a30-a4b8-82c3f48fe5c8"
        },
        "action--c29159f0-b4fc-422b-bd8b-6ad362dc6412": {
